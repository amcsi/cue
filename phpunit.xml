<phpunit
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/3.7/phpunit.xsd"
        bootstrap="bootstrap.php">
    <testsuites>
        <testsuite name="Router">
            <directory>tests/src/Cue</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="coverage-html" target="public" charset="UTF-8" highlight="false" lowUpperBound="35" highLowerBound="70" />
    </logging>
    <filter>
        <blacklist>
            <directory>vendor</directory>
        </blacklist>
    </filter>
</phpunit>